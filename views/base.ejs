<%- include('header') %>
<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>login for the existing user</span>
            <% if(locals.logout){%>
                <div class="alter alert-success text-cnter">
                    
                    <%=logout%>
                </div>
                <% } %>
        </div>
        <form action="/route/login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-controll"placeholder="email"name="email">
              
            </div>
            <div class="form-group p-2">
                <input type="password" class="form-controll"placeholder="password"name="password">

            </div>
            <button type="submit" class="btn btn-success rounded-pill">submit</button>

        </form>
    </div>
</div>


<%- include('footer') %>
